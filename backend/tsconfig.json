{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "ES2022",
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitAny": true,
    "paths": {
      "@configs/*": ["configs/*"],
      "@databases/*": ["databases/*"],
      "@middlewares/*": ["middlewares/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "include": ["src"]
}

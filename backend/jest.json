{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@configs/(.*)$": "<rootDir>/src/configs/$1",
    "^@databases/(.*)$": "<rootDir>/src/databases/$1",
    "^@utils/(.*)$": "<rootDir>/src/utils/$1"
  }
}
